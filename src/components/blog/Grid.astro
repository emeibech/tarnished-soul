---
import Item from '~/components/blog/GridItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<!-- changed lg-grid-cols-4 to lg-grid-cols-3 to better fit rectangular images -->
<div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-3 -mb-6">
  {posts.map((post) => <Item post={post} />)}
</div>
